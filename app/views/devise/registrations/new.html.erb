<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <h2 class="text-center h2-font">会員登録</h2>
    <br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "shared/devisemes" %>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, placeholder: "ニックネーム", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "会員登録", class: "btn btn-block btn-primary" %>
      </div>
    <% end %>    
  </div>
</div>

