<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <h2 class="text-center h2-font">パスワード変更</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "shared/devisemes" %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "新しいパスワード", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "新しいパスワード（もう一度入力してください）", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワード変更", class: "btn btn-block btn-primary" %>
      </div>
    <% end %>

  </div>
</div>


